<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
        
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>cancelAction</from-outcome>
            <to-view-id>/main/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>listAccounts</from-outcome>
            <to-view-id>/account/accountsList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>enotesList</from-outcome>
            <to-view-id>/enote/enoteList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>editTeam</from-outcome>
            <to-view-id>/team/editTeam.xhtml</to-view-id>
            <redirect />
        </navigation-case>


        <navigation-case>
            <from-outcome>j_security_check</from-outcome>
            <to-view-id>/main/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>        
    
        <navigation-case>
            <from-outcome>editAccount</from-outcome>
            <to-view-id>/account/editAccount.xhtml</to-view-id>
            <redirect />
        </navigation-case>        
      
        <navigation-case>
            <from-outcome>changePassword</from-outcome>
            <to-view-id>/account/changePasswordAccount.xhtml</to-view-id>
            <redirect />
        </navigation-case>        
        
        <navigation-case>
            <from-outcome>accountsList</from-outcome>
            <to-view-id>/account/accountsList.xhtml</to-view-id>
            <redirect />
        </navigation-case>        
        <navigation-case>
            <from-outcome>createEnote</from-outcome>
            <to-view-id>/enote/createEnote.xhtml</to-view-id>
            <redirect />
        </navigation-case>        
        <navigation-case>
            <from-outcome>editEnote</from-outcome>
            <to-view-id>/enote/editEnote.xhtml</to-view-id>
            <redirect />
        </navigation-case>        
        <navigation-case>
            <from-outcome>viewEnote</from-outcome>
            <to-view-id>/enote/viewEnote.xhtml</to-view-id>
            <redirect />
        </navigation-case>       
       
        <navigation-case>
            <from-outcome>createMnote</from-outcome>
            <to-view-id>/mnote/createMnote.xhtml</to-view-id>
            <redirect />
        </navigation-case>        
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/common/success.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>listTeam</from-outcome>
            <to-view-id>/team/listTeam.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>mnoteList</from-outcome>
            <to-view-id>/mnote/mnoteList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>viewReport</from-outcome>
            <to-view-id>/mnote/report.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>mnotesList</from-outcome>
            <to-view-id>/mnote/mnoteList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>enoteRedir</from-outcome>
            <to-view-id>/enote/enoteList.xhtml</to-view-id>
            <redirect />
        </navigation-case>

    </navigation-rule>
</faces-config>


